getForNext() {
	local lCommand="$1"; shift
	if ! [ "${lCommand:0:3}" = 'get' ]; then lCommand="get${lCommand@u}"; fi
	local -i lRow=; local -i lCol=; read -sr lRow lCol < <(getXYNext "$@"); shift 2
	$lCommand $lRow $lCol
}
