while ((currRow < rows)); do
	# while ((${#inputStream} > 0)); do
	# 	newChar="${inputStream:0:1}"
	# 	inputStream="${inputStream:1}"
	# 	_output $columns $currCol "${testLines[$currRow]}" "$newChar" &
